{
    "compilerOptions": {
      "target": "ES2023",
      "module": "esnext",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": ".",
      "paths": {
        "@/*": ["./src/*"]
      },
      "resolveJsonModule": true,
      "moduleResolution": "node",
      "noEmit": true
    },
    "exclude": [
      "node_modules",
      "dist",
      "build",
      "out",
      ".next"
    ],
    "include": [
      "packages/**/*",
    ]
  }
