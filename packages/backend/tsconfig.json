{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
      "outDir": "./dist",
      "rootDir": "./src",
      "lib": ["ES2023"],
      "types": ["node"],
      "module": "ESNext",
      "esModuleInterop": true,
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist"],
    "ts-node": {
      "compilerOptions": {
        "module": "ESNext"
      },
      "transpileOnly": true,
      "allowImportingTsExtensions": true
    },
  }
  